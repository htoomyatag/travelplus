
<div class="portlet box blue">
            <div class="portlet-title">
              <div class="caption">
              Hotel listings
              </div>
            </div>

            <div class="portlet-body form">
                
                <br/>
                <p style="padding-left:20px;">

<%= link_to 'New Hotel', new_hotel_path, :class => "btn btn-default" %>

          </p>
          <table class="table table-bordered" style="padding:30px;">
            <thead>
              <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Star</th>
                <th>Rate per night</th>
                <th colspan="3"></th>
              </tr>
            </thead>
              <tbody>
              <% @hotels.each do |hotel| %>
                <tr>
                  <td><%= hotel.name %></td>
                  <td><%= hotel.address %></td>
                  <td><%= hotel.phone %></td>
                  <td><%= hotel.star %></td>
                  <td><%= hotel.rate_per_night %></td>
                  <td><%= link_to 'Show', hotel %></td>
                  <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
                  <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

            </div>
</div>




