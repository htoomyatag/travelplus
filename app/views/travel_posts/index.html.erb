

<div class="portlet box blue">
            <div class="portlet-title">
              <div class="caption">
              Travel Post listings
              </div>
            </div>

            <div class="portlet-body form">
                
                <br/>
                <p style="padding-left:20px;">
                  <%= link_to 'New Travel post', new_travel_post_path, :class => "btn btn-default" %>
                </p>
          <table class="table table-bordered" style="padding:30px;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Writer</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @travel_posts.each do |travel_post| %>
      <tr>
        <td><%= travel_post.title %></td>
        <td><%= travel_post.content %></td>
        <td><%= travel_post.writer %></td>
        <td><%= link_to 'Show', travel_post %></td>
        <td><%= link_to 'Edit', edit_travel_post_path(travel_post) %></td>
        <td><%= link_to 'Destroy', travel_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

          </div>
</div>




