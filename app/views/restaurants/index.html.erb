<div class="portlet box blue">
            <div class="portlet-title">
              <div class="caption">
              Restaurant listings
              </div>
            </div>

            <div class="portlet-body form">
                
                <br/>
                <p style="padding-left:20px;">
                  <%= link_to 'New Restaurant', new_restaurant_path, :class => "btn btn-default" %>
                </p>
          <table class="table table-bordered" style="padding:30px;">
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Address</th>
              <th>Restaurant type</th>
              <th colspan="3"></th>
            </tr>
          </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.restaurant_type %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
          </table>

          </div>
</div>




